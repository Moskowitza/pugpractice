doctype html
html
    head
    body
        h2 My Web App

        -let user={name:"Aaron", loggedIn:true, lastLogin: 6}
        if user.loggedIn
            p
                | Welcome Back,
                strong #{user.name}
        else if user.lastLogin<10
            p
                | Your last log in #{user.lastLogin} minutes ago.     
        else
            a(href="/login") Log In
            
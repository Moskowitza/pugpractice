mixin comments(commentData)
    
    .comment
        if commentData.admin
            em (Posted by Admin)
        .date= commentData.date
        .author= commentData.author
        .text= commentData.text
        
doctype html
html
    head
        title Mixins in Pug
        style.
            .comment{
                font-family: sans-serif;
                line-height: 1.5;
                padding: 10px;
                border: 1px solid #555;
                width: 250px;
            }

            .date{
                font-size:85%;
                text-align:right;
            }
            .author{font-size:110%;}
            .text{font-size:100%;}
    body
        -const c ={date: "04-04-2018",author: "Aaron Moskowitz",admin:true, text: "This is our comment body."}
        -const d ={date: "03-30-2019",author: "Emily Luker",admin:false ,text: "Is it Gritty?"}
        +comments(c)
        +comments(d)